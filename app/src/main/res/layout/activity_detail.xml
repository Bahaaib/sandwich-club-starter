<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ets.udacity.sandwichclub.DetailActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/img_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:contentDescription="@string/sandwich_picture_content_description"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/origin_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/views_marginLeft"
            android:layout_marginTop="@dimen/origin_marginTop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/views_marginLeft"
            android:layout_marginTop="@dimen/alsoknown_marginTop"
            android:text="@string/detail_also_known_as_label"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/views_marginLeft"
            android:layout_marginTop="@dimen/ing_marginTop"
            android:text="@string/detail_ingredients_label"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/views_marginLeft"
            android:layout_marginTop="@dimen/originTV_marginTop"
            android:text="@string/detail_place_of_origin_label"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/views_marginLeft"
            android:layout_marginTop="@dimen/descTV_marginTop"
            android:maxWidth="@dimen/descTV_maxWidth"
            android:padding="@dimen/descTV_padding" />

        <TextView
            android:id="@+id/ingredients_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/views_marginLeft"
            android:layout_marginTop="@dimen/ingTV_marginTop"
            android:maxWidth="@dimen/ingTV_maxWidth" />

        <TextView
            android:id="@+id/also_known_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/views_marginLeft"
            android:layout_marginTop="@dimen/alsoknownTV_marginTop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/views_marginLeft"
            android:layout_marginTop="@dimen/desc_marginTop"
            android:text="@string/detail_description_label"
            android:textStyle="bold" />
    </RelativeLayout>

</ScrollView>

